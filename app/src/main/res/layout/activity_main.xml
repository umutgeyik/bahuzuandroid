<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:src="@drawable/bahuzu"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:background="@drawable/radius">

            <Button
                android:id="@+id/registerBttn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginVertical="80dp"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/montserrat"
                android:layout_marginRight="31dp"
                android:onClick="myClickHandler"
                android:text="Kayıt Ol"
                android:textAppearance="@style/kay_t_ol"
                android:textSize="25dp" />

            <Button
                android:id="@+id/loginBttn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:layout_marginVertical="150dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/montserrat"
                android:onClick="loginClicked"
                android:text="Giriş Yap"
                android:textAppearance="@style/kay_t_ol"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/infobla" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Danışmanlık başvurusu için tıklayınız."
                    android:textAlignment="center"
                    android:clickable="true"
                    android:layout_marginLeft="25dp"
                    android:onClick="doctorRegisterClicker"
                    android:textSize="15dp"
                    android:textAppearance="@style/kay_t_ol"/>
            </RelativeLayout>


        </FrameLayout>



    </LinearLayout>









</RelativeLayout>