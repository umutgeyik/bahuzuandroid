<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AfterBuyPopUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textSize="25dp"
        android:text="Randevunuz Başarıyla Oluşturulmuştur."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:gravity="center"
        android:text="Bundan sonra tek yapmanız gereken randevu saatinde uygulamaya giriş yaparak, randevular sekmesine girip, oluşturduğunuz randevunun sağ tarafında bulunan simge yeşile döndüğünde (randevu saatinde yeşile dönecektir, lütfen sayfayı yenileyiniz.) tıklayarak randevu odasına giriş yapmaktır."/>
    <Button
        android:id="@+id/bitirButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bitirClicked"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_deneme1"
        android:text="Ana Sayfaya Dön"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:textSize="25dp" />

</LinearLayout>