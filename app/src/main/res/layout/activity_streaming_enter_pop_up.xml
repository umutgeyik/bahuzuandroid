<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    android:padding="50dp"
    tools:context=".StreamingEnterPopUp">
    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:text="Simge randevu saatinizde yeşil renge döndüğünde tıklayarak giriş yapabilirsiniz."
        android:gravity="center"/>
    <TextView
        android:id="@+id/blablaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:text="(Randevu saatinde sayfayı yenileyiniz.)"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:onClick="closeClicked"
        android:background="@color/color_deneme1"
        android:text="Kapat"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_alternates_bold" />

</LinearLayout>