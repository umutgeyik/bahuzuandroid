<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_deneme1"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_weight="20">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:gravity="left|center"
                        android:text="Danışman: " />

                    <TextView
                        android:id="@+id/doctorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/montserrat"
                        android:gravity="left|center"
                        android:text="Umut" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:textSize="15sp"
                        android:gravity="left|center"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:text="Randevu Tarihi: "
                        android:layout_weight="33.3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:fontFamily="@font/montserrat"
                        android:text="11/05/2019 "
                        android:id="@+id/dateText"
                        android:layout_weight="33.3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="Randevu Saati: "
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:gravity="left|center"
                        android:fontFamily="@font/montserrat"
                        android:text="15:30"
                        android:id="@+id/hourText"
                        android:layout_weight="33.3"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="80">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:src="@drawable/ic_green_circle_warning"
                    android:layout_gravity="center_horizontal"
                    android:text="Text View 2"
                    android:id="@+id/imageGreenOrRed"/>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>